<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <h2> </h2>


        <%= simple_form_for @invoice do |f| %>
            <%= f.simple_fields_for :invoice_details do |i| %>
                <%= i.input :quantity %>
                <%= i.input :subtotal %>
                <%= i.input :drug_id, as: :hidden %>
                <%= i.input :total, as: :hidden %>
               <% end %>
                <%= f.input :frequency, collection: ['Semanal', 'Mensual', 'Trimestral'] %>
                <div class="footer">
                  <%= f.submit "Confirmar Orden", class: 'btn btn-primary' %>

                </div>
              <% end %>
    </div>
  </div>
</div>



