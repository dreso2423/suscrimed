
<div class="login_page" >
<div class="login" >
  <img alt="logo"  class="brand_logo" src="<%= asset_path 'suscrimed-logo-full.png' %>" >
  <div class="title" >Bienvenido !</div>
  <div class="sub_title">Ingresa a tu cuenta Suscrimed</div>
  <div class="container" >
    <div class="row justify-content-center" >
      <div class="col-6">

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions ">
      <%= f.button :submit, "Inicia Sessión", class: "btn btn-large btn-info sign_in " %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>


      <div class="actions ">
        <%# f.submit ## "Iniciar Sesión" , :class => 'button button_fill_primary bigger' %>

      </div>


    </div>

  </div>


  </div>




