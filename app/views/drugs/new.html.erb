<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6  ">
      <h2>Please put in the information of your new drug</h2>
      <%= simple_form_for @drug do |f| %>
        <%= f.input :drug_name, input_html: { class: "form-input" } , label: "Name" %>

        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
