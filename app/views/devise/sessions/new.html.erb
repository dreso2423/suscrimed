
<div class="login_page" >
<div class="login" >
  <img alt="logo"  class="brand_logo" src="<%= asset_path 'suscrimed-logo-full.png' %>" >
  <div class="title" >Bienvenido !</div>
  <div class="sub_title">Ingresa a tu cuenta Suscrimed</div>
  <div class="form">
    <div class="field" >
      <span class="placeholder" >Username <span style="color: red" >*</span></span>
      <input type="text" class="username">
      <span class="error_msg" >Error with username</span>
    </div>
    <div class="field" >
      <span class="placeholder" >Password <span style="color: red" >*</span></span>
      <input type="password" class="password">
      <span class="error_msg" >Error with password</span>
    </div>
    <span class="forgot_password" >Forgot Password ?</span>
    <button class="login_btn" >Sign in</button>
    <span class="sign_up" > Not an user? <span style="text-decoration: underline;" >Sign up</span> </span>
  </div>
  <%= render "devise/shared/links" %>
</div>
</div>


<div class="container" >
  <div class="row justify-content-center" >
    <div class="col-6">

      <h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

    </div>


  </div>

</div>
