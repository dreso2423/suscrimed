<div class="container py-3">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <%= image_tag(@drug.image, width: '100%') %>
    <!--   como se si esta cargando la imagen aqui ? -->
    </div>
    <div class="col-sm-12 col-md-6">
      <h1><%= @drug.drug_name %></h1>
      <p><%= @drug.description %></p>
      <p>Amount: <%= humanized_money_with_symbol(@drug.price_cents) %></p>
    </div>
  </div>
</div>
